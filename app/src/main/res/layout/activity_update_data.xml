<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UpdateBiodata">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e_text_ubah_nama_mahasiswa"
        android:text="Update Biodata"
        android:layout_marginVertical="20dp"
        android:gravity="center"
        android:textSize="30sp"
        android:textStyle="italic"
        />

    <EditText
        android:id="@+id/e_text_ubah_nama_mahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/e_text_ubah_nim_mahasiswa"
        android:hint="masukkan nama baru"
        android:inputType="textPersonName"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/e_text_ubah_nim_mahasiswa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_above="@+id/e_text_ubah_nama_kampus"
        android:layout_marginVertical="5dp"
        android:hint="masukkan nim baru" />

    <EditText
        android:id="@+id/e_text_ubah_nama_kampus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_update_biodata"
        android:hint="masukkan nama kampus baru"
        android:inputType="textPersonName"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/button_update_biodata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginVertical="10dp"/>
</LinearLayout>


</RelativeLayout>